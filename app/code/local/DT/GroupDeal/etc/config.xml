<?xml version="1.0"?>
<config>
    <modules>
        <DT_GroupDeal>
            <version>0.1.0</version>
        </DT_GroupDeal>
    </modules>
    <global>
        <models>
            <dt_groupdeal>
                <class>DT_GroupDeal_Model</class>
                <resourceModel>dt_groupdeal_resource</resourceModel>
            </dt_groupdeal>
            <dt_groupdeal_resource>
                <class>DT_GroupDeal_Model_Resource</class>
                <entities>
                    <deal>
                        <table>dt_group_deal</table>
                    </deal>
                </entities>
            </dt_groupdeal_resource>
        </models>
        <blocks>
            <dt_groupdeal>
                <class>DT_GroupDeal_Block</class>
            </dt_groupdeal>
        </blocks>
        <helpers>
            <dt_groupdeal>
                <class>DT_GroupDeal_Helper</class>
            </dt_groupdeal>
        </helpers>
        <resources>
            <dt_groupdeal_setup>
                <setup>
                    <module>DT_GroupDeal</module>
                </setup>
            </dt_groupdeal_setup>
        </resources>
    </global>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <DT_GroupDeal before="Mage_Adminhtml">DT_GroupDeal_Adminhtml</DT_GroupDeal>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <translate>
            <modules>
                <DT_GroupDeal>
                    <files>
                        <default>DT_GroupDeal.csv</default>
                    </files>
                </DT_GroupDeal>
            </modules>
        </translate>
        <layout>
            <updates>
                <dt_groupdeal>
                    <file>dt/group_deal.xml</file>
                </dt_groupdeal>
            </updates>
        </layout>
    </adminhtml>
</config>