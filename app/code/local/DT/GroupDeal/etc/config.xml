<?xml version="1.0"?>
<config>
    <modules>
        <DT_GroupDeal>
            <version>0.1.2</version>
        </DT_GroupDeal>
    </modules>
    <global>
        <models>
            <dt_groupdeal>
                <class>DT_GroupDeal_Model</class>
                <resourceModel>dt_groupdeal_resource</resourceModel>
            </dt_groupdeal>
            <dt_groupdeal_resource>
                <class>DT_GroupDeal_Model_Resource</class>
                <entities>
                    <deal>
                        <table>dt_group_deal</table>
                    </deal>
                    <tierprice>
                        <table>dt_deal_tier_price</table>
                    </tierprice>
                    <order>
                        <table>dt_deal_order</table>
                    </order>
                </entities>
            </dt_groupdeal_resource>
            <sales>
                <rewrite>
                    <quote_item>DT_GroupDeal_Model_Sales_Quote_Item</quote_item>
                </rewrite>
            </sales>
        </models>
        <blocks>
            <dt_groupdeal>
                <class>DT_GroupDeal_Block</class>
            </dt_groupdeal>
        </blocks>
        <helpers>
            <dt_groupdeal>
                <class>DT_GroupDeal_Helper</class>
            </dt_groupdeal>
        </helpers>
        <resources>
            <dt_groupdeal_setup>
                <setup>
                    <module>DT_GroupDeal</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
            </dt_groupdeal_setup>
        </resources>

        <events>
            <catalog_product_type_configurable_price>
                <observers>
                    <dt_groupdeal>
                        <class>dt_groupdeal/observer</class>
                        <method>catalogProductTypeConfigurablePrice</method>
                    </dt_groupdeal>
                </observers>
            </catalog_product_type_configurable_price>
            <sales_order_place_after>
                <observers>
                    <dt_groupdeal>
                        <class>dt_groupdeal/observer</class>
                        <method>saveOrderIdForDeal</method>
                    </dt_groupdeal>
                </observers>
            </sales_order_place_after>
        </events>

        <fieldsets>
            <sales_convert_quote_item>
                <is_deal>
                    <to_order_item>*</to_order_item>
                </is_deal>
                <has_expired>
                    <to_order_item>*</to_order_item>
                </has_expired>
            </sales_convert_quote_item>
        </fieldsets>
    </global>

    <frontend>
        <events>
            <checkout_cart_product_add_after>
                <observers>
                    <unique_event_name>
                        <class>dt_groupdeal/observer</class>
                        <method>setDealForItem</method>
                    </unique_event_name>
                </observers>
            </checkout_cart_product_add_after>
            <sales_quote_collect_totals_after>
                <observers>
                    <dt_groupdeal>
                        <class>dt_groupdeal/observer</class>
                        <method>saveIsExpiredForDeal</method>
                    </dt_groupdeal>
                </observers>
            </sales_quote_collect_totals_after>
        </events>

        <layout>
            <updates>
                <dt_groupdeal>
                    <file>dt/group_deal.xml</file>
                </dt_groupdeal>
            </updates>
        </layout>

        <routers>
            <dt_groupdeal>
                <use>standard</use>
                <args>
                    <module>DT_GroupDeal</module>
                    <frontName>groupdeal</frontName>
                </args>
            </dt_groupdeal>
        </routers>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <DT_GroupDeal before="Mage_Adminhtml">DT_GroupDeal_Adminhtml</DT_GroupDeal>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <translate>
            <modules>
                <DT_GroupDeal>
                    <files>
                        <default>DT_GroupDeal.csv</default>
                    </files>
                </DT_GroupDeal>
            </modules>
        </translate>
        <layout>
            <updates>
                <dt_groupdeal>
                    <file>dt/group_deal.xml</file>
                </dt_groupdeal>
            </updates>
        </layout>

        <events>
            <catalog_product_get_final_price>
                <observers>
                    <dt_groupdeal>
                        <class>dt_groupdeal/observer</class>
                        <method>processAdminFinalPrice</method>
                    </dt_groupdeal>
                </observers>
            </catalog_product_get_final_price>
        </events>
    </adminhtml>
</config>